<Alloy>
	<Window id="w_reset_password" onOpen="doOpenWindow" onClose="doCloseWindow">
		<View id="v_cont">
			<ScrollView id="scr_cont">
				<View id="v_elem_holder">
					<!-- Dynamic logo Comes here -->
					<ImageView id="ig_logo" />
					<!-- Label that holds Title As Forgot Password? -->
					<Label id="lbl_forgot_password" />
					<!-- Label that holds little information for reset password as message -->
					<Label id="lbl_reset_password_msg" />
					<!-- TextField that holds Username -->
					<TextField id="txf_username" onReturn="doClickReset" />
					<!-- View which holds one or two view in horizontal way -->
					<View id="v_additional_action">
						<Label id="lbl_login_back" onClick="doClickLoginBack" />
					</View>
					<!-- Button which used for Register user -->
					<Button id="btn_reset" onClick="doClickReset" />
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>